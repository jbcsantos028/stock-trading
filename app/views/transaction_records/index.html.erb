<h1>My transactions</h1>
<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Company Name</th>
          <th scope="col">Shares</th>
          <th scope="col">Price</th>
          <th scope="col">Amount</th>
          <th scope="col">Type</th>
        </tr>
      </thead>
      <tbody>
        <% @transaction_records.each do |transaction_record| %>
          <tr>
            <th scope="row"><%= transaction_record.created_at.to_date %></th>
            <td><%= transaction_record.company_name %></td>
            <td><%= stock_shares = transaction_record.shares %></td>
            <td><%= price = transaction_record.price %></td>
            <td><%= stock_shares * price  %></td>
            <td><%= transaction_record.transaction_type %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>